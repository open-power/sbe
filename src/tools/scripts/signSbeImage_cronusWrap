# IBM_PROLOG_END_TAG

# Exit if any command fails
set -e

# @brief Checks whether the file that is the input argument exists on the file
# system. The function
#        exits with an error status if the file DNE.
#
# @param[in] Full path to the file to check
check_path()
{
    if [ ! -f $1 ]; then
        echo "***ERROR | SBE | signSbeImage_cronusWrap : $1 DNE!"
        exit -1
    fi
}

SIGINING_SCRIPT=$PWD/signSbeImage
SCRATCH_DIR=$PWD/sbeScratchDir
SBE_IMAGE=$PWD/sbe_seeprom_DD1.bin
IPL_IMAGE_TOOL=$PWD/x86_64/ipl_image_tool
HBBL_HEADER=$PWD/HBBL.header
HBBL_HEADER_STRIPPED=$PWD/HBBL.header.stripped

# Do some sanity checks on things we expect the script to consume
check_path $SIGINING_SCRIPT
check_path $SBE_IMAGE
check_path $IPL_IMAGE_TOOL
check_path $HBBL_HEADER

#Sign SBE Image
$SIGINING_SCRIPT -s $SCRATCH_DIR -i $SBE_IMAGE -t $IPL_IMAGE_TOOL

#Strip out padding zeros from HBBL.header i.e only 1282 bytes is actual data. Keep it 8 byte alligned i.e 1288
echo "Strip HBBL.header content"
dd bs=1 count=1288 if=$HBBL_HEADER of=$HBBL_HEADER_STRIPPED

#Append the stripped HBBL_HEADER_STRIPPED into .sbh_hbbl xip section
echo "Appending HBBL_HEADER_STRIPPED secure header into .sbh_hbbl xip section"
$IPL_IMAGE_TOOL $SBE_IMAGE append .sbh_hbbl $HBBL_HEADER_STRIPPED || exit -1

#Remove Stripped HBBL header
rm -rf $HBBL_HEADER_STRIPPED

exit 0
